# Auto-discovery settings
discovery_settings:
  # Enable automatic documentation discovery
  auto_discover: true
  
  # Paths to scan for documentation references
  scan_paths:
    - "docs/"
    - "README.md"
    - "*.md"
    - ".agent-os/"
  
  # File patterns to include
  include_patterns:
    - "*.md"
    - "*.yaml"
    - "*.yml"
    - "*.json"
  
  # File patterns to exclude
  exclude_patterns:
    - "node_modules/"
    - ".git/"
    - ".venv/"
    - "dist/"
    - "build/"

# Registry metadata
metadata:
  created_by: "Agent OS Framework"
  framework_version: "1.4.0"
  registry_format_version: "1.0.0"
  
